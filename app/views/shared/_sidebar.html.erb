<div class="hidden-xs col-sm-4 col-md-3 col-lg-3 sidebar">
	<% if user_signed_in? %>			
		<h3>Your Info:</h3>
		<% if current_user.location.nil? %>
			<%= link_to "Add Address", new_user_location_path(current_user), :class => 'btn btn-primary'%>
		<% else %>
			<strong>Address:</strong> <%= current_user.location.address %> (<%= link_to "edit", edit_user_location_path(current_user, current_user.location)%>
			)<br>
		<% end %>
	
		<hr>
		<strong>Children:</strong> <span class="sidebar-child-count"><%= current_user.children.count %></span><br>
	
		<%= button_tag "Add a child", :class => 'btn btn-primary btn-sm', :data => {:toggle => 'modal', :target => '#new-child'} %>
		<%= link_to "Edit children", user_children_path(current_user), :class => 'btn btn-primary btn-sm' %>
	<% end %>
	
</div>