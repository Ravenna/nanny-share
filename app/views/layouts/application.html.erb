<!DOCTYPE html>
<html>
<head>
  <title>Nanny Share Portal</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">


	<script type="text/javascript"
	   src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCs9tIxTqjEvTRv1yHLvLtiFoA6TXdPJxw&sensor=false&libraries=geometry">
	 </script>
	

	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
	
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=654245227960374";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
</head>
<body>
	
	<header class="header  clearfix">


		<div id="header_meta" class="">
		
			      <div class="container">
			      <ul class="noLightbox social_bookmarks icon_count_3">
			      	<li class="social_bookmarks_twitter av-social-link-twitter social_icon_1">
			      		<a target="_blank" href="https://twitter.com/SeattleNannyNet" title="Twitter"><span class="fa fa-twitter"></span></a>
			      	</li>
			      	<li class="social_bookmarks_facebook av-social-link-facebook social_icon_2">
			      		<a target="_blank" href="https://www.facebook.com/pages/Seattle-Nanny-Network-Inc/169143906432692" title="Facebook">
			      			<span class="fa fa-facebook"></span>
			      		</a>
			      	</li>
			      	<li class="social_bookmarks_linkedin av-social-link-linkedin social_icon_3"><a target="_blank" href="http://www.linkedin.com/company/seattle-nanny-network-inc-?trk=top_nav_home" aria-hidden="true" data-av_icon="î£¼" data-av_iconfont="entypo-fontello" title="Linkedin"><span class="fa fa-linkedin"></a></li>
			      	</ul>
			      	<div class="phone-info"><span>425.803.9511 or 206.467.1999</span>	</div>
			      	</div>
		</div>

		<div class="header_main"> 
			<div class="container clearfix"> 

				<!-- begin #logo -->
				<div id="logo" class="pull-left"> <a href="<%= root_path %>"><%= image_tag("seattlenanny.png", alt: "Seattle Nanny", class:  "img-responsive") %></a> </div>
				<!-- end #logo --> 
				
				
					<nav id="main_menu" class="pull-right">
						<ul>
							<% if user_signed_in? && !current_user.location.nil? %>
								<li><%= link_to 'Find a Family', find_a_family_path %></li>
						  	<% end %>
							<%= render 'users/shared/login_items' %>
						  	<%= render 'users/shared/registration_items' %>
						  	<li><a href="http://seattlenanny.com" title="Seattle Nanny">Back to Seattle Nanny</a></li>
						  
						</ul>
					</nav>
				
				
				

			</div><!-- /.container--> 
		</div>
	</header>	
	
	
	<div class="container main-content">
		<div class="row">
			<div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">

				<% if notice %>
					<div class="alert alert-success"><p class="notice"><%= notice %></p></div>
				<% end %>
				<% if alert %>
		        	<div class="alert alert-danger"><p class="alert"><%= alert %></p></div>
				<% end %>				
				
				<%= yield %>
			</div>
			<%= render 'shared/sidebar'%>
		</div>	
	</div>


<%= render 'shared/footer'%>

<% if user_signed_in? %>
	<%= render "shared/new_child"%>
<% end %>




</body>
</html>
