<%= form_for [@user, @location] do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


	<div class="form-group">
	    <label for="address_one">Address</label>
	    <%= f.text_field :address_one, :class => 'form-control', :placeholder => "Address" %>
	</div>
	
	<div class="form-group">
	    <label for="address_two">Address</label>
	    <%= f.text_field :address_two, :class => 'form-control', :placeholder => "Apt #..." %>
	</div>
	
	<div class="form-group">
	    <%= f.label :city %>
	    <%= f.text_field :city, :class => 'form-control', :placeholder => "Seattle" %>
	</div>
	
	<div class="form-group">
	    <%= f.label :state %><br>
	    <%= f.select(:state, options_for_select(us_states, :selected => "WA"),{},  {:class => 'form-control'}) %>
	</div>
	
	<div class="form-group">
	    <%= f.label :zip %>
	    <%= f.text_field :zip, :class => 'form-control', :max_length => '10', :placeholder => 'Zip Code'%>
	</div>
	
  
  <div class="actions">
    <%= f.submit 'Save', :class => 'btn'%>
  </div>
<% end %>
